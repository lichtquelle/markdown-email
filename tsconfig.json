{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2018",
    "module": "CommonJS",

    "declaration": true,

    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
